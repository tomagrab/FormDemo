@inject ILogger<MyForm> Logger

<EditForm Model="Person" method="POST" FormName="PersonForm" OnSubmit="SubmitForm" class="flex flex-col gap-2 shadow max-w-sm p-4 rounded-md">
    <h3 class="font-bold text-center">Form</h3>
    <div class="flex flex-col gap-2">
        <label for="FirstName">First Name</label>
        <InputText id="FirstName" @bind-Value="Person.FirstName" class="input" />
    </div>
    <div class="flex flex-col gap-2">
        <label for="LastName">Last Name</label>
        <InputText id="LastName" @bind-Value="Person.LastName" class="input" />
    </div>
    <div class="flex flex-col">
        <button class="btn btn-base btn-primary" type="submit">
            Submit
        </button>
    </div>
</EditForm>

@code {
    [SupplyParameterFromForm]
    private PersonModel Person { get; set; } = new();
    private void SubmitForm()
    {
        // Log the form data
        Logger.LogInformation($"Form submitted: {Person.FirstName} {Person.LastName}");

        // Reset the form
        Person = new();
    }
}
